#! /bin/sh

T="${label:-"${LABEL:-"$1"}"}"

if [ -z "$T" ] ; then
	echo '$label and $1 is not set' 1>&2
	exit 1
fi

_cmake() {
	echo "CMAKE_EXECUTABLE=/usr/local/bin/cmake-$T"
}

case "$T" in
	mingw*)
		_cmake
	;;
	qt5|clang)
		_cmake
	;;
	vs2012)
		G="Visual Studio 11"
		case "$TARGET" in
			x86) : ;;
			x64)
				G="$G Win64"
			;;
			*)
				echo "Unknown target $TARGET" 1>&2
				exit 1
			;;
		esac
		echo "CMAKE_GENERATOR=$G"
	;;
	borland)
		echo "CMAKE_GENERATOR=Borland Makefiles"
	;;
esac
